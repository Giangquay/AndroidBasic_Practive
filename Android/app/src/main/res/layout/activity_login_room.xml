<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="vn.minhgiang.RoomdataBase.Activities.LoginRoom">
    <EditText
        android:hint="UserName"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/RoomUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/RoomAdress"
        android:hint="UserAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRoom"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ADD USER"
        android:backgroundTint="@color/teal_700"/>
    <TextView
        android:id="@+id/textDeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete ALL"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:textColor="@color/teal_700"/>
    <EditText
        android:id="@+id/edtSearch_Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:hint="Enter Name"
        android:background="@drawable/bg_white_border_gray"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/lv_recycler_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>