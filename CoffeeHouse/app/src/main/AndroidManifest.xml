        android:supportsRtl="true"
        android:theme="@style/Theme.OrderDrinkApp">
        <activity android:name="com.project.coffeehouse.Activities.DetailStatisticActivity"></activity>
        <activity android:name="com.project.coffeehouse.Activities.AddStaffActivity" />
        <activity android:name=".Activities.PasswordActivity"/>
        <activity
            android:name="com.project.coffeehouse.Activities.EditTableActivity"
            android:label="Sửa bàn ăn"
            android:theme="@style/PopUpActivity" />
        <activity android:name="com.project.coffeehouse.Activities.PaymentActivity" />
