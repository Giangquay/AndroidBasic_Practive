        <activity android:name="com.project.coffeehouse.Activities.Register2ndActivity" />
        <activity android:name="com.project.coffeehouse.Activities.WelcomeActivity" />
        <activity android:name="com.project.coffeehouse.Activities.RegisterActivity" />
        <activity android:name="com.project.coffeehouse.Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>