<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".StartActivityAnimation.MainStartAnimation"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnDefault"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Activity Default"/>
    <Button
        android:id="@+id/btnLeftToRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Activity Left To Right"/>
    <Button
        android:id="@+id/btnRightToLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Activity Right To Left"/>
    <Button
        android:id="@+id/btnTopToBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Activity Top To Bottom"/>
    <Button
        android:id="@+id/btnBottomToTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Activity Bottom to Top"/>
</LinearLayout>